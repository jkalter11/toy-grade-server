<div class="container">
	<div class="hero-unit" style="width: 900px; padding: 20px; text-align:center; margin: 70px auto 30px">
		<h2>Create Assignment</h2>
	</div>
	<div class="hero-unit" style="margin-top:20px">
		
		<div class="left">
		
			<%= form_for(@assignment) do |f| %>
			  <%= devise_error_messages! %>

			  <div><%= f.label :course %>
				  <%= f.select :course, options_from_collection_for_select(Course.find_by_sql("select course_code from courses where email like '%#{current_user.email}%'"), :course_code, :course_code) %></div>
				  <div><%= f.label :semester %>
					  <%= f.select :semester, options_from_collection_for_select(Course.find_by_sql("select semester from courses where email like '%#{current_user.email}%'"), :semester, :semester) %></div>
  
			  <div><%= f.label :description %>
				  <%= f.text_field :description, :placeholder => "e.g. Homework 1"  %></div>

			  <div><%= f.label :due_date %>
				  <%= f.date_select :due_date %></div>
			  <%= f.hidden_field 'email', :value => current_user.email %>
			  <%= f.hidden_field 'name', :value => current_user.name %>
			  <%= f.hidden_field 'is_instructor', :value => current_user.is_instructor %>
			  <%= f.hidden_field 'grade', :value => 0 %>
			  <%= f.hidden_field 'status', :value => "assigned" %>
  
			  <div><%= f.submit "Create Assignment" %></div>
  
			<% end %>


			<%= link_to 'Back', assignments_path %>
		
		</div>
		
		<div class="right">
			
		</div>

	</div>
</div>