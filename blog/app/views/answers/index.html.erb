<h1>Listing answers</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Course</th>
    <th>Semester</th>
    <th>Answer</th>
    <th>Is correct</th>
    <th>Student email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.question %></td>
    <td><%= answer.course %></td>
    <td><%= answer.semester %></td>
    <td><%= answer.answer %></td>
    <td><%= answer.is_correct %></td>
    <td><%= answer.student_email %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

