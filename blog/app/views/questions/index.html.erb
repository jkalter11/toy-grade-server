<h1>Listing questions</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Is mc</th>
    <th>A</th>
    <th>B</th>
    <th>C</th>
    <th>D</th>
    <th>Answer</th>
    <th>Assignment</th>
    <th>Course</th>
    <th>Semester</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.question %></td>
    <td><%= question.is_mc %></td>
    <td><%= question.a %></td>
    <td><%= question.b %></td>
    <td><%= question.c %></td>
    <td><%= question.d %></td>
    <td><%= question.answer %></td>
    <td><%= question.assignment %></td>
    <td><%= question.course %></td>
    <td><%= question.semester %></td>
    <td><%= link_to 'Show', question %></td>
    <td><%= link_to 'Edit', edit_question_path(question) %></td>
    <td><%= link_to 'Destroy', question, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

